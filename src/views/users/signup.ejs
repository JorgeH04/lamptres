    <form class="minisearch" action="#">
        <div class="search-area">
            <input type="text" placeholder="Search Our Catalog">
            <div class="action">
                <a href="#">
                    <i class="fa fa-search"></i>
                </a>
            </div>
        </div>
    </form>
    <div class="close-btn">
        <span>close</span>
    </div>
</div>
<!-- End Search Popup -->

