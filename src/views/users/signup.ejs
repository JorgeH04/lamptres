<% include ../partials/_header %>



<main class="main mt-5">
    <div class="container-fluid">
        <div class="section no-padding login-register-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="container login-register">
                            <!-- Heading -->
                            <h1>REGISTRARSE</h1>
                        
                         
                        
                            <!-- Form -->
                            <form action="/users/signup" method="post">

                                <!-- email input -->
                                <div class="first-input input-block first-input-block">
                                    <input type="text" name="name" placeholder="Nombres" class="input" id="email" />
                                </div>
                                <!-- email input -->
                                <div class="first-input input-block first-input-block">
                                    <input type="email" name="email" placeholder="Email" class="input" id="email" />
                                </div>
                                <!-- password input -->
                                <div class="first-input input-block first-input-block">
                                    <input type="password" name="password" placeholder="Contraseña" class="input" id="password" />
                                </div>

                                <div class="first-input input-block first-input-block">
                                        <input type="password" name="confirm_password" placeholder="Confirmar Contraseña" class="input" id="password" />
                                </div>
                
                                 <!-- repeat password input -->
                                <div class="input-block">
                                    <input type="text" name="direccion" placeholder="Dirección y localidad" class="input"  />
                                </div>

                                <!-- repeat password input -->
                                <div class="input-block">
                                    <input type="text" name="telefono" placeholder="Teléfono" class="input" id="repeat-password" />
                                </div>

                                <!-- sign in button -->
                                <button class="square-btn btn-signin btn-block">
                                    Sign in
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Start Search Popup -->
